(defconst ess-version "@@VERSION@@"
  "Version of ESS currently loaded.")

(defsubst ess-version-release ()
  "Public version upon which `ess-version' is based, e.g., for ess-version=18.0.2-snapshot, ess-version-release=18.0.2"
  (string-match "\\([0-9]+\.\\)\\([0-9]+\\)\\(?:\\(\.[0-9]+\\)\\)?" ess-version)
  (concat (match-string 1 ess-version)
          (match-string 2 ess-version)
          (match-string 3 ess-version)))

(provide 'ess)

